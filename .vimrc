set nocompatible
set shiftwidth=2
set number
set ls=2
set ruler
set history=50
set backspace=indent,eol,start
set bg=dark
set backup
set backupdir=~/.backup
set directory=~/.vimswap
set softtabstop=4
set expandtab
set cursorline
set lazyredraw
nnoremap j gj
nnoremap k gk
nnoremap ; :
nnoremap < 0
nnoremap > $
set directory=.,$TEMP

